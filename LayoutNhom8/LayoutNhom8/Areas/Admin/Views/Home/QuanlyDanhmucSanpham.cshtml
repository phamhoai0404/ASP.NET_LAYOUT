
@{
    ViewBag.Title = "Danh mục sản phẩm";
    ViewBag.Link = "Quản lý danh mục sản phẩm";
    ViewBag.Name = "QuanlyDanhmucSanpham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section CSSPartial{
    <link href="~/Areas/Admin/Assets/css/table.css" rel="stylesheet">
}
<div class="row">
    <div class="col-lg-12 mb-2 ">
        <button type="button" class="btn btn-success">
            <i class="bi bi-plus-square-dotted"></i>
            Thêm danh mục
        </button>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="text-center">
                    <th>STT</th>
                    <th>Mã danh mục</th>
                    <th>Tên danh mục</th>
                    <th colspan="3">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-center">
                    <th>1</th>
                    <td>2015</td>
                    <td>Honda</td>
                    <td title="Xem chi tiết" class="see-details"><i class="bi bi-eye-fill"></i></td>
                    <td title="Sửa danh mục" class="edit"><i class="bi bi-pencil-fill"></i></td>
                    <td title="Xóa danh mục" class="remove"><i class="bi bi-trash-fill"></i></td>
                </tr>
                <tr class="text-center">
                    <th>2</th>
                    <td>2016</td>
                    <td>Yamaha</td>
                    <td title="Xem chi tiết" class="see-details"><i class="bi bi-eye-fill"></i></td>
                    <td title="Sửa danh mục" class="edit"><i class="bi bi-pencil-fill"></i></td>
                    <td title="Xóa danh mục" class="remove"><i class="bi bi-trash-fill"></i></td>
                </tr>
                <tr class="text-center">
                    <th>3</th>
                    <td>2017</td>
                    <td>Suzuki</td>
                    <td title="Xem chi tiết" class="see-details"><i class="bi bi-eye-fill"></i></td>
                    <td title="Sửa danh mục" class="edit"><i class="bi bi-pencil-fill"></i></td>
                    <td title="Xóa danh mục" class="remove"><i class="bi bi-trash-fill"></i></td>
                </tr>

            </tbody>
        </table>
    </div>
</div>
